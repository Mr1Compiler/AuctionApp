@model Lab2Auction.Models.Auction

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Auction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartingPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartingPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt class="col-sm-2">
            Owned by
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
    </dl>

    @if (Model.Images != null && Model.Images.Any())
    {
        <h4>Photos</h4>
        <div class="row">
            @foreach (var image in Model.Images)
            {
                <div class="col-md-4 mb-3">
                    <img src="@image.ImagePath" class="img-fluid rounded border shadow-sm" alt="Auction Image" />
                </div>
            }
        </div>
    }
    else
    {
        <p><em>No images uploaded for this auction.</em></p>
    }
</div>

<br />
<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

