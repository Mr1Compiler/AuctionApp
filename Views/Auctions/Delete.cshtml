@model Lab2Auction.Models.Auction
@{
    ViewData["Title"] = "Delete Auction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Delete Auction</h1>
<h4 class="mb-3">Are you sure you want to delete this auction?</h4>

@if (Model.Images?.Any() == true)
{
    <div class="mb-3 text-center">
        <img src="@Model.Images.First().ImagePath" alt="Auction Image" style="max-height: 250px; object-fit: cover; border-radius: 6px;" />
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Starting Price</dt>
            <dd class="col-sm-9">$@Model.StartingPrice</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd hh:mm tt")</dd>

            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">@Model.UserEmail</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyAuctions" class="btn btn-secondary ms-2">Cancel</a>
</form>
