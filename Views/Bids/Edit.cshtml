@model Lab2Auction.Models.Bid

@{
    ViewData["Title"] = "Edit Bid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Edit Bid</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" placeholder="Enter bid amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BidDate" class="form-label"></label>
                <input asp-for="BidDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="BidDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AuctionId" class="form-label"></label>
                <select asp-for="AuctionId" class="form-select" asp-items="ViewBag.AuctionId"></select>
                <span asp-validation-for="AuctionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserEmail" class="form-label"></label>
                <input asp-for="UserEmail" class="form-control" readonly />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

